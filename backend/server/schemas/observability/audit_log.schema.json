{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ForensicAuditLog",
  "type": "object",
  "required": [
    "analysis_id",
    "timestamp",
    "inputs",
    "execution",
    "result"
  ],
  "properties": {
    "analysis_id": {
      "type": "string",
      "format": "uuid"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "inputs": {
      "type": "object",
      "required": [
        "prompt_hash",
        "wording_checksum",
        "policy_checksum"
      ],
      "properties": {
        "prompt_hash": {
          "type": "string",
          "length": 64
        },
        "wording_checksum": {
          "type": "string",
          "length": 64
        },
        "policy_checksum": {
          "type": "string",
          "length": 64
        }
      }
    },
    "execution": {
      "type": "object",
      "properties": {
        "model_version": {
          "type": "string"
        },
        "token_usage_input": {
          "type": "integer"
        },
        "token_usage_output": {
          "type": "integer"
        },
        "execution_time_ms": {
          "type": "integer"
        }
      }
    },
    "result": {
      "type": "object",
      "properties": {
        "success": {
          "type": "boolean"
        },
        "final_score": {
          "type": "integer"
        },
        "error_code": {
          "type": "string"
        }
      }
    }
  }
}